# Reindexer server configuration file
storage: 
  path: /var/lib/reindexer
  engine: leveldb

# Network configuration
net:
  httpaddr: 0:9088
  rpcaddr: 0:6534
  webroot: ${CMAKE_INSTALL_PREFIX}/share/reindexer/web
  security: false

# Logger configuration
logger:
  serverlog: /var/log/reindexer/reindexer_server.log
  corelog: /var/log/reindexer/reindexer_server.log
  httplog: ""
  rpclog: ""
  loglevel: info

# System options
system:
  user: reindexer

# Debugging features
debug:
  pprof: false
  allocs: false

